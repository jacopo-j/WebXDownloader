{
  "description": "Enables downloading of Webex meeting recordings",
  "version": "1.1.3",
  "permissions": [
    "storage",
    "tabs",
    "https://*.webex.com/*"
  ],
  "homepage_url": "https://github.com/jacopo-j/WebXDownloader",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.webex.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "WebXDownloader",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "name": "WebXDownloader",
  "icons": {
    "128": "icon.png"
  }
}